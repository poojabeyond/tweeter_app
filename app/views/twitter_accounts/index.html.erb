<div class='d-flex justify-content-between'>
  <h1>Twitter Account</h1>
  <%= button_to "Connect Twitter","/auth/twitter", data: {turbo: "false"}, method: :post%>
</div>

<% @twitter_accounts.each do|twitter_account| %>
  <div>
     <%= image_tag twitter_account.image, class:'rounded-circle'%>
     <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}",  target: :_blank  %>
     <%= button_to 'Disconnect', twitter_account_path(twitter_account), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>

  </div>
<%end%>