<%= form_with model: @user, data: { turbo: true }, url: sign_in_path do |form| %>

<div class='container-fluid mt-5 '>
<div class = 'row d-flex justify-content-center '>
 <div class="col-3 bg-info-subtle border border-dark rounded-3  mt-3">
 <h1 class='text-center p-4'>Login</h1>

<div class='m-2'>
  <%= form.label :email %>
  <%= form.text_field :email,  class:"form-control"%>
</div>
<div class='m-2'>
  <%= form.label :password %>
  <%= form.password_field :password,  class:"form-control"%>
</div>
  <div class="text-center m-4"> 
  <%= link_to "Forget your password?", password_reset_path, class:'text-grey' %>
  <div class="text-center mb-2 p-2"> 
   <%= form.submit "sign in", class: 'btn btn-dark px-5 m-2' %>
 </div >  
  </div>
   </div >
   </div>
   </div>
  <% end %>