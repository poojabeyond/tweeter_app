<div class='m-4 card card-body w-50 shadow  mb-5 bg-body-tertiary rounded rounded-end'>
  <%= tweet.body %>
    <div class='d-flex justify-content-between'>
    <div>
     <%= image_tag tweet.twitter_account.image, class:'rounded-circle m-2'%>
     <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}",  target: :_blank  %>
     </div>
     <div>
     <% if tweet.published? %>
      <%= link_to 'View Tweet', "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}" ,target: :_blank , class: 'btn btn-success rounded-pill'%>
     <% else %>
     <div class="d-flex">
       <p class="mt-3"> Scheduled for <%= l tweet.publish_at, format: :long %> </p>
      <div class="d-flex">
       <%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-warning mx-1 p-2' %>
       <%= button_to 'Delete', tweet, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger p-2' %>
      </div>
     </div> 
     <% end %>
     </div>
  </div>
</div>