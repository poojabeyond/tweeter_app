<%= form_with model: @user, data: { turbo: true }, url: sign_up_path do |form| %>

<div class='container-fluid mt-5 '>
<div class = 'row d-flex justify-content-center '>
<div class="col-3 bg-info-subtle border border-dark rounded-3 mt-5">
 <h2 class='text-center m-2'>Sign up</h2>
 <% if @user.errors.any? %>
  <div class="alert alert-danger p-0" role="alert">          
   <% @user.errors.full_messages.each do |message| %>
   <ul class='m-0'><li><%= message %></li></ul>
   <% end %>
  </div>
<% end %>
 <div class='m-2'>
  <%= form.label :email %>
  <%= form.text_field :email,  class:"form-control"%>
  </div>
  <div class='m-2'>
  <%= form.label :password %>
  <%= form.password_field :password,  class:"form-control"%>
  </div>
  <div class='m-2'>
  <%= form.label :confirm_password%>
  <%= form.password_field :password_confirmation,  class:"form-control" %>
  </div>
  <div class="text-center mb-2 p-2"> 
   <%= form.submit "sign up", class: 'btn btn-dark px-5' %>
  </div>
   </div>
   </div>
   </div>
  
  <% end %>
